#:kivy 1.10

<ModeCheckBox@CheckBox>:
	active: True
	disabled: True

<PinLabelText@TextInput>:
	multiline: False

<OutputCheckBox@CheckBox>:
	disabled: True
	active: False
	
<CtrlPanel>:
	
	BoxLayout:
		padding: 10
		orientation: 'vertical'
		Label:
			text: 'Firmata Bench Tester'
			font_size: '36sp'
			size_hint: (1.0, 0.16)
			
		Label:
			id: con_stat_lbl
			text: root.connected
			font_size: '14sp'
			size_hint: (1.0, 0.1)
			
		AnchorLayout:
			size_hint: (1.0, 0.1)
			
			BoxLayout:
				size_hint: (0.6, 1.0)
				Button:
					id: con_btn
					text: 'Connect'
					font_size: '14sp'
					on_press: root.pyfirmata_connect()
				Button:
					id: discon_btn
					text: 'Disconnect'
					font_size: '14sp'
					on_press: root.pyfirmata_disconnect()
				Button:
					id: update_btn
					text: 'Update Inputs'
					font_size: '14sp'
					on_press: root.set_update_flag()
				Button:
					id: show_anal_btn
					text: 'Show Analog'
					font_size: '14sp'
				
					
		BoxLayout:
			id: digi_anal
			orientation: 'horizontal'
			
			BoxLayout:
				padding: 10
				orientation: 'vertical'
				
				Label:
					size_hint_y: 0.1
					font_size: '18sp'
					text: 'Digital I/O'
					
				BoxLayout:
					id: digital_columns
					padding: 10
					orientation: 'horizontal'
					BoxLayout:
						id: col_pin_modes
						padding: 10
						orientation: 'vertical'
						
						Label:
							text: 'INPUT'
							font_size: '18sp'
						ModeCheckBox:
							id: pin2_mode_di
							on_active: root.set_modes()
						ModeCheckBox:
							id: pin3_mode_di
							on_active: root.set_modes()
						ModeCheckBox:
							id: pin4_mode_di
							on_active: root.set_modes()
