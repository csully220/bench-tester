						ModeCheckBox:
							id: pin12_mode_di
							on_active: root.set_modes()
						ModeCheckBox:
							id: pin13_mode_di
							on_active: root.set_modes()
							
					BoxLayout:
						padding: 10
						orientation: 'vertical'
						Label:
							text: 'Pin'
							font_size: '18sp'
						Label:
							text: '1'
						Label:
							text: '2'
						Label:
